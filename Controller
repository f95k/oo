
package uppgift1;
import java.sql.*;
import java.util.*;

public class Controller {
    private Student student;
    private Kurs kurs;
    private String percentage;
    ArrayList<Student> betyglist;
    ArrayList<Kurs> kurslist;
    private DAL dal;
    public String exceptionMessage;
    
    public Controller() {
        dal = new DAL();
    }
    
    public Student findStudent(String sPnr) throws SQLException{
        student = dal.getStudent(sPnr);
        return student;
    }
    
    public Kurs findKurs(String kurskod) throws SQLException {
        kurs = dal.getKurs(kurskod);
        return kurs;
    }
    
    public ArrayList<Last> findBetyg(String sPnr, String kurskod) throws SQLException {
        return dal.getGradeForCourse(sPnr, kurskod);
    }
    
    public ArrayList<Student> getBetygList(String kurskod, String termin) throws SQLException {
        return dal.getAllStudentReadingCourse(kurskod, termin);
    }
    
    public void addStudent(String sPnr, String sNamn, String sAdress) throws SQLException {
        dal.addStudent(sPnr, sNamn, sAdress);
    }
    
    public void addKurs(String kurskod, String kursnamn, int poang) throws SQLException {
        dal.addKurs(kurskod, kursnamn, poang);
        
    }
    
    public String addStudentLaser(String sPnr, String kurskod, String temrin) throws SQLException {
        return dal.addStudentLaser(sPnr, kurskod, temrin);
    }
    
    public void addStudentLast(String sPnr, String kurskod, String termin, String betyg) throws SQLException {
        dal.addStudentLast(sPnr, kurskod, termin, betyg);
    }
    
    public ArrayList<Student> getAllStudentReadingKurs(String kurskod, String termin) throws SQLException {
        return dal.getAllStudentReadingKurs(kurskod, termin);
    }
    
    public ArrayList<Kurs> getAllKurs() throws SQLException {
        return dal.getAllCourse();
    }
    
     public void removeStudent(String sPnr) throws SQLException {
        dal.deleteStudent(sPnr);
    }
    
      public void removeKurs(String kurskod) throws SQLException {
        dal.deleteCourse(kurskod);
    }
    
      public void removeStudentFromLaser(String sPnr, String kurskod) throws SQLException {
        dal.removeStudentFromLaser(sPnr, kurskod);
    }
